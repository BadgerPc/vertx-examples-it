{
  "name": "jgroups-examples",

  "tags": ["cluster", "jgroups"],

  "cluster": true,
  "executions": {

    "java" : {
      "directory" : "${base}/target",
      "command" : "java -jar jgroups-examples-${version}-fat.jar run io.vertx.example.jgroups.ProducerApp -cluster -cp . -Djgroups.bind_addr=${interface}",
      "client-command" : "java -jar jgroups-examples-${version}-fat.jar run io.vertx.example.jgroups.ConsumerApp -cluster -cp . -Djgroups.bind_addr=${interface}"
    }
  },

  "client-execute-until" : "hello vert.x",
  "grace-text": "Sending data to",
  "post-check": "jgroups-check.groovy"
}