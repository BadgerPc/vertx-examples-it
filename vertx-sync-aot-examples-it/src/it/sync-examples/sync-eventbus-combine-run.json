{
  "name": "sync-eventbus-combine",

  "tags": ["sync", "eventbus", "combine"],

  "libraries": [
    "${dependencies}/vertx-sync-${version}.jar",
    "${dependencies}/quasar-core-0.7.3-jdk8.jar",
    "${dependencies}/guava-18.0.jar",
    "${dependencies}/kryo-2.24.0.jar",
    "${dependencies}/kryo-serializer-0.36.jar",
    "${dependencies}/de.flapdoodle.embed.mongo-1.46.0.jar",
    "${dependencies}/de.flapdoodle.embed.process-1.39.0.jar",
    "${dependencies}/commons-compress-1.3.jar",
    "${dependencies}/hsqldb-2.3.2.jar"
  ],

  "executions": {
    "java" : {
      "directory" : "${base}",
      "command" : "vertx run io.vertx.example.sync.eventbus.combine.Combine -cp ${base}/target/classes:."
    }
  },

  "grace-text": "Succeeded in deploying verticle",
  "post-check": "sync-eventbus-combine-check.groovy"
}