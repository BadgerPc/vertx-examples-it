{
  "name": "sync-single-event",

  "tags": ["sync", "event"],

  "libraries": [
    "${dependencies}/vertx-sync-3.1.0-SNAPSHOT.jar",
    "${dependencies}/quasar-core-0.7.3-jdk8.jar",
    "${dependencies}/guava-18.0.jar",
    "${dependencies}/kryo-2.24.0.jar",
    "${dependencies}/kryo-serializer-0.36.jar",
    "${dependencies}/de.flapdoodle.embed.mongo-1.46.0.jar",
    "${dependencies}/de.flapdoodle.embed.process-1.39.0.jar",
    "${dependencies}/commons-compress-1.3.jar"
  ],

  "executions": {
    "java" : {
      "directory" : "${base}",
      "command" : "vertx run io.vertx.example.sync.singleevent.Server -cp ${base}/target/classes:."
    }
  },

  "grace-text": "Single event has fired",
  "post-check": "sync-single-event-check.groovy"
}